{
  "name": "openskool",
  "version": "0.0.1",
  "private": true,
  "license": "AGPL-3.0",
  "engines": {
    "node": "16.17.0"
  },
  "scripts": {
    "api": "yarn workspace @os/api",
    "app": "yarn workspace @os/app",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "codegen": "turbo run codegen",
    "dev": "turbo run dev",
    "format": "prettier --write .",
    "lint": "turbo run lint",
    "preview": "turbo run preview",
    "test": "turbo run test"
  },
  "devDependencies": {
    "prettier": "^2.7.1",
    "prettier-plugin-package": "^1.3.0",
    "turbo": "^1.4.3"
  },
  "resolutions": {
    "pino": "~8.2"
  },
  "packageManager": "yarn@3.2.1",
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "workspaces": [
    "api",
    "app",
    "config/*"
  ]
}
