{
  "name": "openskool",
  "version": "0.0.1",
  "private": true,
  "license": "AGPL-3.0",
  "engines": {
    "node": "16.17.0"
  },
  "scripts": {
    "api": "pnpm --filter api",
    "app": "pnpm --filter app",
    "build": "pnpm run turbo-run build",
    "clean": "pnpm run turbo-run clean",
    "codegen": "pnpm run turbo-run codegen",
    "dev": "pnpm run turbo-run dev",
    "format": "prettier --write .",
    "lint": "pnpm run turbo-run lint",
    "preview": "pnpm run turbo-run preview",
    "test": "pnpm run turbo-run test",
    "turbo-run": "dotenv -e .env.local -- turbo run --api='https://turbo.openskool.dev'"
  },
  "devDependencies": {
    "dotenv-cli": "^6.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-package": "^1.3.0",
    "turbo": "^1.4.3"
  },
  "packageManager": "pnpm@7.9.5",
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "all"
  }
}
