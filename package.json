{
  "name": "openskool",
  "version": "0.0.1",
  "private": true,
  "license": "AGPL-3.0",
  "engines": {
    "node": "16.15.0"
  },
  "scripts": {
    "api": "yarn workspace @os/api",
    "app": "yarn workspace @os/app",
    "build": "yarn turbo run build",
    "clean": "yarn turbo run clean",
    "codegen": "yarn turbo run codegen",
    "dev": "yarn turbo run dev",
    "format": "yarn prettier --write .",
    "lint": "yarn turbo run lint",
    "preview": "yarn turbo run preview",
    "test": "yarn turbo run test"
  },
  "devDependencies": {
    "prettier": "^2.7.1",
    "prettier-plugin-package": "^1.3.0",
    "turbo": "^1.3.4"
  },
  "resolutions": {
    "get-tsconfig": "npm:@unts/get-tsconfig@latest"
  },
  "packageManager": "yarn@3.2.1",
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "workspaces": [
    "api",
    "app",
    "config/*",
    "libs/*"
  ]
}
