{
  "name": "@os/api",
  "version": "0.0.1",
  "private": true,
  "license": "AGPL-3.0",
  "engines": {
    "node": "16.13.2"
  },
  "scripts": {
    "build": "node scripts/build.cjs",
    "clean": "rm -rf .eslintcache .turbo/ dist/",
    "dev": "NODE_ENV=development nodemon src/server.ts",
    "generate": "prisma generate",
    "lint": "eslint --cache --ext .cjs,.ts .",
    "preview": "NODE_ENV=production node -r dotenv-flow/config dist/server.js",
    "start": "node dist/server.js",
    "test": "tsc --noEmit",
    "test:integration": "vitest run"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "@prisma/client": "^3.10.0",
    "@sinclair/typebox": "^0.23.4",
    "altair-fastify-plugin": "4.4.0",
    "cuid": "^2.1.8",
    "fastify": "^3.27.2",
    "fastify-cors": "^6.0.3",
    "fastify-env": "^2.1.1",
    "fastify-plugin": "^3.0.1",
    "graphql": "^16.3.0",
    "mercurius": "^9.3.3",
    "nexus": "^1.2.0",
    "nexus-prisma": "0.35.0",
    "read-pkg-up": "^9.1.0"
  },
  "devDependencies": {
    "@os/eslint-config": "workspace:*",
    "@os/tsconfig": "workspace:*",
    "@types/cuid": "^2.0.1",
    "@types/dotenv-flow": "^3.2.0",
    "dotenv-flow": "^3.2.0",
    "esbuild": "^0.14.23",
    "esbuild-node-externals": "^1.4.1",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.9.0",
    "fast-glob": "^3.2.11",
    "nodemon": "^2.0.15",
    "pino-pretty": "^7.5.1",
    "prisma": "^3.10.0",
    "typescript": "~4.5.5",
    "vitest": "0.5.4"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "node -r dotenv-flow/config -r esbuild-register"
    },
    "ext": "lock,ts",
    "watch": [
      "src/",
      "../yarn.lock"
    ]
  }
}
