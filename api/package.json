{
  "name": "@os/api",
  "version": "0.0.1",
  "private": true,
  "license": "AGPL-3.0",
  "type": "module",
  "engines": {
    "node": "16.15.0"
  },
  "scripts": {
    "build": "rollup -c",
    "clean": "rm -rf .eslintcache .turbo/ dist/",
    "codegen": "tsx -r dotenv-flow/config scripts/codegen.ts",
    "dev": "FORCE_COLOR=1 NODE_ENV=development nodemon src/server.ts | pino-pretty",
    "lint": "eslint --cache --ext .cjs,.mjs,.ts .",
    "postinstall": "yarn run prisma generate",
    "preview": "FORCE_COLOR=1 NODE_ENV=production node -r dotenv-flow/config dist/index.js",
    "prisma:test": "DATABASE_URL='postgresql://openskool:openskool@localhost:5433/openskool-test' prisma",
    "start": "node dist/index.js",
    "test": "tsc --noEmit && vitest run --coverage",
    "test:ci": "tsc --noEmit && vitest run --coverage --reporter=junit --outputFile=test.xml"
  },
  "dependencies": {
    "@casl/ability": "^6.0.0",
    "@casl/prisma": "^1.0.4",
    "@envelop/response-cache": "^3.0.0",
    "@faker-js/faker": "^7.4.0",
    "@fastify/awilix": "^3.0.0",
    "@fastify/cookie": "^7.3.1",
    "@fastify/cors": "^8.0.0",
    "@fastify/env": "^4.0.0",
    "@fastify/session": "^9.0.0",
    "@graphql-yoga/common": "^2.12.3",
    "@graphql-yoga/node": "^2.13.4",
    "@hapi/boom": "^10.0.0",
    "@keycloak/keycloak-admin-client": "^19.0.1",
    "@os/ability": "workspace:*",
    "@pothos/core": "^3.13.0",
    "@pothos/plugin-errors": "^3.5.0",
    "@pothos/plugin-prisma": "^3.16.0",
    "@prisma/client": "^4.1.0",
    "@sinclair/typebox": "0.24.20",
    "accept-language-parser": "^1.5.0",
    "awilix": "^7.0.3",
    "connect-redis": "^6.1.3",
    "cross-undici-fetch": "~0.4.14",
    "cuid": "^2.1.8",
    "fastify": "^4.3.0",
    "fastify-plugin": "^4.0.0",
    "graphql": "^16.5.0",
    "graphql-scalars": "^1.17.0",
    "ioredis": "^5.2.2",
    "jose": "^4.8.3",
    "keyv": "^4.3.3",
    "ms": "3.0.0-canary.1",
    "openid-client": "^5.1.8",
    "p-limit": "^4.0.0",
    "pino": "^8.3.0",
    "quick-lru": "^6.1.1",
    "read-pkg-up": "^9.1.0",
    "zod": "^3.17.10"
  },
  "devDependencies": {
    "@fastify/type-provider-typebox": "^2.1.0",
    "@os/eslint-config": "workspace:*",
    "@os/tsconfig": "workspace:*",
    "@types/accept-language-parser": "^1.5.3",
    "@types/connect-redis": "^0.0.18",
    "@types/dotenv-flow": "^3.2.0",
    "@types/is-ci": "^3.0.0",
    "@types/prettier": "^2.7.0",
    "@vitest/coverage-c8": "^0.22.0",
    "c8": "^7.12.0",
    "dotenv-flow": "^3.2.0",
    "eslint": "^8.22.0",
    "graphql-tag": "^2.12.6",
    "is-ci": "^3.0.1",
    "nodemon": "^2.0.19",
    "pino-pretty": "^9.0.0",
    "prettier": "^2.7.1",
    "prisma": "^4.1.0",
    "rollup": "~2.77.3",
    "rollup-plugin-esbuild": "^4.9.3",
    "rollup-plugin-typescript-paths": "^1.4.0",
    "tsx": "^3.8.2",
    "type-fest": "^2.18.0",
    "typescript": "~4.7.4",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "0.22.0"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "tsx --inspect -r dotenv-flow/config"
    },
    "ext": "lock,ts",
    "watch": [
      "src/",
      "../yarn.lock"
    ]
  },
  "prisma": {
    "seed": "tsx -r dotenv-flow/config prisma/seed.ts"
  }
}
