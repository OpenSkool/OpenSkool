{
  "name": "@os/api",
  "version": "0.0.1",
  "private": true,
  "license": "AGPL-3.0",
  "type": "module",
  "engines": {
    "node": "16.15.0"
  },
  "scripts": {
    "build": "rollup -c",
    "clean": "rm -rf .eslintcache .turbo/ dist/",
    "codegen": "tsx -r dotenv-flow/config scripts/codegen.ts",
    "dev": "FORCE_COLOR=1 NODE_ENV=development nodemon src/server.ts | pino-pretty",
    "lint": "eslint --cache --ext .cjs,.mjs,.ts .",
    "postinstall": "yarn run prisma generate",
    "preview": "FORCE_COLOR=1 NODE_ENV=production node -r dotenv-flow/config dist/index.js",
    "prisma:test": "DATABASE_URL='postgresql://openskool:openskool@localhost:5433/openskool-test' prisma",
    "start": "node dist/index.js",
    "test": "tsc --noEmit && vitest run --coverage",
    "test:ci": "tsc --noEmit && vitest run --coverage --reporter=junit --outputFile=test.xml"
  },
  "dependencies": {
    "@casl/ability": "^5.4.4",
    "@envelop/response-cache": "^2.3.3",
    "@fastify/cookie": "^7.0.0",
    "@fastify/cors": "^8.0.0",
    "@fastify/env": "^4.0.0",
    "@fastify/session": "^9.0.0",
    "@fastify/type-provider-typebox": "^1.0.0",
    "@graphql-yoga/common": "^2.8.3",
    "@graphql-yoga/node": "^2.9.2",
    "@hapi/boom": "^10.0.0",
    "@os/ability": "workspace:*",
    "@pothos/core": "^3.12.0",
    "@pothos/plugin-errors": "^3.4.2",
    "@prisma/client": "^3.15.2",
    "@sinclair/typebox": "0.23.5",
    "accept-language-parser": "^1.5.0",
    "cross-undici-fetch": "0.4.5",
    "cuid": "^2.1.8",
    "fastify": "^4.0.3",
    "fastify-plugin": "^3.0.1",
    "graphql": "^16.5.0",
    "graphql-scalars": "^1.17.0",
    "jose": "^4.8.1",
    "ms": "3.0.0-canary.1",
    "openid-client": "^5.1.6",
    "p-memoize": "^6.0.2",
    "pino": "^8.0.0",
    "read-pkg-up": "^9.1.0",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.2.0",
    "@os/eslint-config": "workspace:*",
    "@os/tsconfig": "workspace:*",
    "@types/accept-language-parser": "^1.5.3",
    "@types/dotenv-flow": "^3.2.0",
    "@types/is-ci": "^3.0.0",
    "@types/prettier": "^2.6.3",
    "c8": "^7.11.3",
    "dotenv-flow": "^3.2.0",
    "eslint": "^8.17.0",
    "graphql-tag": "^2.12.6",
    "is-ci": "^3.0.1",
    "nodemon": "^2.0.16",
    "pino-pretty": "^8.0.0",
    "prettier": "^2.7.1",
    "prisma": "^3.15.2",
    "rollup": "^2.75.6",
    "rollup-plugin-esbuild": "^4.9.1",
    "rollup-plugin-typescript-paths": "^1.3.1",
    "tsx": "^3.4.3",
    "type-fest": "^2.13.1",
    "typescript": "~4.7.3",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "0.15.2"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "tsx --inspect -r dotenv-flow/config"
    },
    "ext": "lock,ts",
    "watch": [
      "src/",
      "../yarn.lock"
    ]
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
