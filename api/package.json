{
  "name": "@os/api",
  "version": "0.0.1",
  "private": true,
  "license": "AGPL-3.0",
  "engines": {
    "node": "16.15.0"
  },
  "scripts": {
    "build": "node scripts/build.cjs",
    "clean": "rm -rf .eslintcache .turbo/ dist/",
    "codegen": "node -r dotenv-flow/config -r esbuild-register scripts/codegen.ts",
    "dev": "FORCE_COLOR=1 NODE_ENV=development nodemon src/server.ts",
    "lint": "eslint --cache --ext .cjs,.ts .",
    "postinstall": "yarn run prisma generate",
    "preview": "FORCE_COLOR=1 NODE_ENV=production node -r dotenv-flow/config dist/server.js",
    "prisma:test": "DATABASE_URL='postgresql://openskool:openskool@localhost:5433/openskool-test' prisma",
    "start": "node dist/server.js",
    "test": "tsc --noEmit && vitest run --coverage",
    "test:ci": "tsc --noEmit && vitest run --coverage --reporter=junit --outputFile=test.xml"
  },
  "dependencies": {
    "@casl/ability": "^5.4.3",
    "@envelop/response-cache": "^2.3.1",
    "@fastify/cookie": "^6.0.0",
    "@fastify/cors": "^7.0.0",
    "@fastify/env": "^3.0.0",
    "@fastify/session": "^8.1.0",
    "@graphql-yoga/common": "^2.3.0",
    "@graphql-yoga/node": "^2.3.0",
    "@hapi/boom": "^9.1.4",
    "@pothos/core": "^3.8.0",
    "@pothos/plugin-errors": "^3.3.0",
    "@prisma/client": "^3.13.0",
    "@sinclair/typebox": "^0.23.5",
    "accept-language-parser": "^1.5.0",
    "cross-undici-fetch": "^0.3.1",
    "fastify": "^3.29.0",
    "fastify-plugin": "^3.0.1",
    "graphql": "^16.4.0",
    "graphql-scalars": "^1.17.0",
    "jose": "^4.8.0",
    "ms": "3.0.0-canary.1",
    "node-fetch": "^3.2.4",
    "openid-client": "^5.1.5",
    "pino": "^6.14.0",
    "read-pkg-up": "^9.1.0",
    "zod": "^3.14.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.2.0",
    "@os/eslint-config": "workspace:*",
    "@os/tsconfig": "workspace:*",
    "@types/accept-language-parser": "^1.5.3",
    "@types/cuid": "^2.0.1",
    "@types/dotenv-flow": "^3.2.0",
    "@types/is-ci": "^3.0.0",
    "@types/pino": "^6.3.12",
    "@types/prettier": "^2.6.0",
    "c8": "^7.11.2",
    "cuid": "^2.1.8",
    "dotenv-flow": "^3.2.0",
    "esbuild": "^0.14.38",
    "esbuild-node-externals": "^1.4.1",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.14.0",
    "fast-glob": "^3.2.11",
    "graphql-tag": "^2.12.6",
    "is-ci": "^3.0.1",
    "nodemon": "^2.0.16",
    "pino-pretty": "^7.6.1",
    "prettier": "^2.6.2",
    "prisma": "^3.13.0",
    "type-fest": "^2.12.2",
    "typescript": "~4.6.4",
    "vitest": "0.10.0"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "node --inspect -r dotenv-flow/config -r esbuild-register"
    },
    "ext": "lock,ts",
    "watch": [
      "src/",
      "../yarn.lock"
    ]
  },
  "prisma": {
    "seed": "node -r dotenv-flow/config -r esbuild-register prisma/seed.ts"
  }
}
