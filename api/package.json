{
  "name": "@os/api",
  "version": "0.0.1",
  "private": true,
  "license": "AGPL-3.0",
  "engines": {
    "node": "16.13.2"
  },
  "scripts": {
    "bootstrap": "yarn run generate",
    "build": "node scripts/build.cjs",
    "clean": "rm -rf .eslintcache .turbo/ dist/",
    "dev": "FORCE_COLOR=1 NODE_ENV=development nodemon src/server.ts",
    "generate": "yarn run generate:prisma && yarn run generate:nexus",
    "generate:nexus": "node -r dotenv-flow/config -r esbuild-register src/schema/module.ts",
    "generate:prisma": "prisma generate",
    "lint": "eslint --cache --ext .cjs,.ts .",
    "preview": "NODE_ENV=production node -r dotenv-flow/config dist/server.js",
    "start": "node dist/server.js",
    "test": "tsc --noEmit",
    "test:integration": "vitest run"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "@prisma/client": "^3.10.0",
    "@sinclair/typebox": "^0.23.4",
    "altair-fastify-plugin": "4.4.0",
    "fastify": "^3.27.2",
    "fastify-cors": "^6.0.3",
    "fastify-env": "^2.1.1",
    "fastify-plugin": "^3.0.1",
    "graphql": "^16.3.0",
    "graphql-scalars": "^1.15.0",
    "mercurius": "^9.3.3",
    "nexus": "^1.2.0",
    "pino": "^6.13.0",
    "read-pkg-up": "^9.1.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.0.0-alpha.7",
    "@os/eslint-config": "workspace:*",
    "@os/tsconfig": "workspace:*",
    "@types/dotenv-flow": "^3.2.0",
    "@types/pino": "^6.3.12",
    "dotenv-flow": "^3.2.0",
    "esbuild": "^0.14.24",
    "esbuild-node-externals": "^1.4.1",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.10.0",
    "fast-glob": "^3.2.11",
    "graphql-tag": "^2.12.6",
    "mercurius-integration-testing": "^4.0.0",
    "nodemon": "^2.0.15",
    "pino-pretty": "^7.5.3",
    "prisma": "^3.10.0",
    "typescript": "~4.6.2",
    "vitest": "0.5.9"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "node -r dotenv-flow/config -r esbuild-register"
    },
    "ext": "lock,ts",
    "watch": [
      "src/",
      "../yarn.lock"
    ]
  },
  "prisma": {
    "seed": "node -r esbuild-register prisma/seed.ts"
  }
}
