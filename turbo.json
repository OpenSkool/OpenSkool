{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [".env.local", ".env.*.local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "codegen"],
      "outputs": ["dist/**"]
    },
    "clean": {
      "cache": false
    },
    "codegen": {
      "outputs": ["src/codegen/**"]
    },
    "@os/app#codegen": {
      "dependsOn": ["@os/api#codegen"]
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build", "codegen"]
    },
    "preview": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "test": {
      "dependsOn": ["^build", "codegen"],
      "outputs": ["coverage/**"]
    },
    "test:ci": {
      "dependsOn": ["^build", "codegen"],
      "outputs": ["coverage/**", "test.xml"]
    }
  }
}
