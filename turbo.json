{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [".env", ".env.*", "tsconfig.json"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "codegen"],
      "inputs": [
        "prisma/**",
        "public/**",
        "src/**",
        "themes/**",
        "windi/**",
        "*.config.ts"
      ],
      "outputs": ["dist/**"]
    },
    "clean": {
      "cache": false
    },
    "codegen": {
      "inputs": ["codegen.yml", "src/**"],
      "outputs": ["src/codegen/**"]
    },
    "@os/app#codegen": {
      "dependsOn": ["@os/api#codegen"]
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build", "codegen"],
      "inputs": ["**/*.cjs", "**/*.mjs", "**/*.ts", "**/*.vue"],
      "outputs": []
    },
    "preview": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "test": {
      "dependsOn": ["^build", "codegen"],
      "inputs": ["src/**", "test/**", "vite*config.ts"],
      "outputs": ["coverage/**"]
    },
    "test:ci": {
      "dependsOn": ["^build", "codegen"],
      "outputs": ["coverage/**", "test.xml"]
    }
  }
}
